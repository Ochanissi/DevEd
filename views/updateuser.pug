extends base

block content
  section.createcourse
    .createcourse__form
      h2.heading-2--form.mb-lg Update user
      form.form.form__createcourse#form__updateuser
        .form__group
          label.form__label(for='updateuser__name') Full name
            input.form__input#updateuser__name(type='text' name='name' placeholder='User name' required='' maxlength='50' autocomplete='off' value= user.name)
        .form__group
          label.form__label(for='updateuser__email') Email address
            input.form__input#updateuser__email(type='email' name='email' placeholder='User email address' required='' autocomplete='off' value= user.email)
        .form__group
          label.form__label(for='updateuser__occupation') Occupation
            input.form__input#updateuser__occupation(type='text' name='occupation' placeholder='User occupation' required='' autocomplete='off' value= user.occupation)
        .form__group
          label.form__label(for='updateuser__country') Country
            input.form__input#updateuser__country(type='text' name='country' placeholder='User country' required='' autocomplete='off' value= user.country)
        .form__group
          label.form__label(for='updateuser__about') About
            textarea.form__input#updateuser__about(type='text' name='about' placeholder='User about' required='' maxlength='200' rows='3' autocomplete='off')= user.about
        .form__group.form__photo-upload.createcourse__photo
          img.form__user-photo(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
          input.form__upload#updateuser__photo(type='file' accept='image/*' name='photo')
          label(for='updateuser__photo') Choose user photo
          input.form__input#updateuser__userId(type='hidden' value=`${user.id}`)
        .createcourse__form--btns
          .form__group
            button.btn.form__group--btn Update user