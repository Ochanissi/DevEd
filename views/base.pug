doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    link(href='bundle.css' rel='stylesheet')
    link(href='./img/logo.png' rel='shortcut icon' type='img/png')
    link(href='https://fonts.googleapis.com/css?family=Maven+Pro:400,500,700&display=swap'
      rel='stylesheet')
    title DevEd | Online Courses




  body.container
    // NAVBAR
    nav.navbar
      input#menu-toggle(type='checkbox')
      label.menu-button-container(for='menu-toggle')
        .menu-button
      
      ul.navbar__main
        li.navbar__main--item
          a.navbar__main--link(href='#header') Home
        li.navbar__main--item
          a.navbar__main--link(href='#about') Courses
        li.navbar__main--item.navbar__main--home
          a(href='#header')
            img.navbar__main--logo(src='./img/logo.png' alt='WebDev Logo')
        li.navbar__main--item
          a.navbar__main--link(href='#projects') About
        li.navbar__main--item
          a.navbar__main--link(href='#contact') Contact

      ul.navbar__secondary
        li.navbar__main--item
          a.btn.btn__nav--primary Log in
        li.navbar__main--item
          a.btn.btn__nav--secondary Sign up

    // CONTENT 
    header.header


