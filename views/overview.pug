extends base

block content
  header.header
    img.header__logo(src="./img/logo.png" alt="WebDev Logo")
    h1.heading-1 Your Course to Success
    h2.heading-2.mb-sm Build skills with courses, certificates, and degrees online from world-class universities and companies
    a.btn(href="#") View courses

  section.about
    .about__title
      h3.heading-3 Achieve your goals
    .about__features
      .about__features-1
        ion-icon.about__features--img(name="construct")
        h4.heading-4--dark Learn the latest skills
        p.about__features--text-1 like business analytics, graphic design, Python, and more
      .about__features-2
        ion-icon.about__features--img(name="trending-up")
        h4.heading-4--dark Get ready for a career
        p.about__features--text-2 in high-demand fields like IT, AI and cloud engineering
      .about__features-3
        ion-icon.about__features--img(name="checkbox-outline")
        h4.heading-4--dark Earn a certificate or degree
        p.about__features--text-3 from a leading university in business, computer science, and more
      .about__features-4
        ion-icon.about__features--img(name="rocket")
        h4.heading-4--dark Upskill your organization
        p.about__features--text-4 with on-demand training and development programs

  section.review
    .review__title
      h3.heading-3 From the DevEd community
    .review__features
      .review__features-1
        img.review__description--img(src="./img/review__photo--4.jpg" alt="Review Photo 1")
        h4.heading-4--dark.review__features--name Vladimir Bratislav
        p.review__features--text-1 Cybersecurity Engineer
        p.review__features--text-2 Russia
        p.review__features--text-3 &mdash;&mdash;&mdash;
        p.review__features--text-4 "I started at stage zero. With DevEd I was able to start learning online and eventually build up enough knowledge and skills to <strong>transition into a well-paying career</strong>"
      .review__features-2
        img.review__description--img(src="./img/review__photo--3.jpg" alt="Review Photo 2")
        h4.heading-4--dark.review__features--name Kara Marko
        p.review__features--text-1 Web Developer
        p.review__features--text-2 United States
        p.review__features--text-3 &mdash;&mdash;&mdash;
        p.review__features--text-4 "<strong>Recruiters saw my Professional Certificate</strong> on my LinkedIn profile. During the interview, they told me <strong>they were impressed with my skills</strong>. I got the job!"
      .review__features-3
        img.review__description--img(src="./img/review__photo--2.jpg" alt="Review Photo 2")
        h4.heading-4--dark.review__features--name Jay Morgan
        p.review__features--text-1 DevOps Engineer
        p.review__features--text-2 United Kingdom
        p.review__features--text-3 &mdash;&mdash;&mdash;
        p.review__features--text-4 "It’s a really big deal to offer an online MBA that’s a <strong>real MBA at a price that’s actually achievable</strong>. This program is totally disrupting higher education.

  section.join
    p.join__title Take the next step toward your personal and professional goals with DevEd.
    p.join__text Join now to receive personalized recommendations from the full DevEd catalog.
    .join__btns
      a.btn.join__btns--1(href="#") View courses
      a.btn.join__btns--2(href="#") Join now

  section.business
    .business__photo
      img.business__photo--1(src="./img/business__photo--1.png" alt="Business Photo 1")
      img.business__photo--2(src="./img/business__photo--2.png" alt="Business Photo 2")
